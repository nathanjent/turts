-- title:  Turtle Burgle
-- author: Nathan Jent
-- desc:   We're here to burgle your turts!
-- script: moon

lerp=(a,b,t)->(1-t)*a + t*b

class Ent
	new:(o)=>
		@x=o and o.x or 10
		@y=o and o.y or 10
		@w=o and o.w or 8
		@h=o and o.h or 8
		@flip=o and o.flip or 0
		@rotate=o and o.rotate or 0
		@scale=o and o.scale or 1
		@state=o and o.state or "idle"
		@sprt=
			id:o and o.sprt and o.sprt.id or 1
			t:o and o.sprt and o.sprt.t or 0
			w:o and o.sprt and o.sprt.w or 1
			h:o and o.sprt and o.sprt.h or 1
			statedata:o and o.sprt and o.sprt.statedata

t=0
cam=
	x:120
	y:64
p=Ent {
	w:8
	h:16
	sprt:
		id:256
		w:1
		h:2
		statedata:
			walking:
				rate:6
				frames:{256,257}
			idle:
				frames:{256}
}
buddy=Ent {
	sprt:
		id:288
}
item=Ent {
	sprt:
		id:0
}
bullets={}

-- get flag as byte
fget8=(id)->peek(0x14404+id)

-- set flag as byte
fset8=(id,val)->poke(0x14404+id,val)

-- draw object adjusted to camera view
draw=(o,c,t)->
	id=o.sprt.id
	if o.state and o.sprt.statedata
		state=o.sprt.statedata[o.state]
		if state.frames and state.rate
			id=state.frames[state.current or 1]
			if (t%60)%state.rate==0
				state.current=state.current and state.current+1 or 1
				if state.current>#state.frames
					state.current=1
	spr id,o.x+c.x,o.y+c.y,
		o.sprt.t,o.scale,o.flip,o.rotate,
		o.sprt.w,o.sprt.h

export TIC=->
	p.state="idle"
	if btn 0
		p.y-=1
		p.state="walking"
	if btn 1
		p.y+=1
		p.state="walking"
	if btn 2
		p.x-=1
		p.flip=1
		p.state="walking"
	if btn 3
		p.x+=1
		p.flip=0
		p.state="walking"

	sprt=mget((p.x+4+cam.x)//8,(p.y+10+cam.y)//8)
	if fget8(sprt)>0
		item.sprt.id=sprt

	buddy.flip=p.flip
	buddy.y=8+p.y+math.sin t/9
	if p.flip==1
		buddy.x=p.x+10
	else
		buddy.x=p.x-10

	if item.sprt.id>0 and btnp 4,15,9
		table.insert bullets,Ent {
			x:buddy.x
			y:buddy.y-6
			flip:buddy.flip
			sprt:
				id:fget8 item.sprt.id
		}

	for i,b in pairs bullets
		if b.flip==1
			b.x-=2
		else
			b.x+=2
		b.rotate+=.2
		if b.x+cam.x>240 or b.x+cam.x<0
			table.remove bullets,i

	cam.x=math.min(120,lerp(cam.x,120-p.x,0.05))
	cam.y=math.min(64,lerp(cam.y,64-p.y,0.05))
	ccx=cam.x/8+(cam.x%8==0 and 1 or 0)
	ccy=cam.y/8+(cam.y%8==0 and 1 or 0)

	cls!
	map(15-ccx,8-ccy,31,18,(cam.x%8)-8,(cam.y%8)-8,0)
	draw p,cam,t
	draw buddy,cam,t
	for b in *bullets
		draw b,cam,t
	print "sprite:#{sprt}",1,1,4
	print "item:#{item.sprt.id}",1,8,4
	t+=1

